{
  "version": 2,
  "routes": [
    { "handle": "filesystem" },
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "outputDirectory": "dist",
  "functions": {
    "api/merge-pdf.js": {
      "maxDuration": 60
    },
    "api/send-order-verification/route.ts": {
      "maxDuration": 30
    },
    "api/verify-order-code/route.ts": {
      "maxDuration": 30
    }
  }
}